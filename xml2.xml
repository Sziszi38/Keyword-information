<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
  <Id>your-add-in-id</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Provider Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Keyword Trigger Add-in" />
  <Description DefaultValue="An add-in that triggers actions based on keywords." />
  <IconUrl DefaultValue="https://example.com/icon.png" />
  <HighResolutionIconUrl DefaultValue="https://example.com/highresicon.png" />
  <SupportUrl DefaultValue="https://example.com/support" />

  <Hosts>
    <Host Name="Document" />
  </Hosts>
  
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="OfficeHost" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://example.com/index.html" />
  </DefaultSettings>
  
  <Permissions>ReadWriteDocument</Permissions>
</OfficeApp>